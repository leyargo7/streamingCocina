<!-- muestra la tabla de usuarios registrados -->

<section id="registro" style="margin-bottom: 150px;">
    <div class="" style="padding: 80px;">
        <h2 class="bg-danger text-white p-3 text-center">Usuarios Conectados</h2>
    </div>
    <div class="text-center">
      <i class="fas fa-street-view fs-1"></i>
    </div>
    
    
    <div id="t" class="text-center fs-1">    
    </div>
    <div id="dt">

    </div>

    <div class="pb-1text-center text-white">
      <p style="display: inline;" id="userNum">        
          <%= d %>
          
          <% { %>
            <script>

                function actualiza_contenido(){

                  $( "#t" ).load( "/gpxconnect #userNum" );
                  
                }
               setInterval( "actualiza_contenido()", 30000 );
                
            </script>
          <% } %> 
      </p>
    </div>

    <div class="container" id="tablita">
      <div class="row mt-5">
          <div class="col-md-6">
              <table class="table table-bordered table-hover">
                  <thead>
                      <tr>
                          <th>No</th>
                          <th>Id</th>
                          <th>Usuario</th>
                          <th>Sesión</th>
                          <th>Hora Conexión</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% dbConexion.forEach(function (client, i){ %>
                      <tr>
                        <td><%= (i+1) %></td>
                        <td><%= client.id %></td>
                        <td><%= client.nombreUsuario %></td>
                        <td><%= client.sesion %></td>
                        <td><%= client.horaEntrada %></td>
                      </tr>
                
                    <% } ) %> 

                  </tbody>
              </table>
          </div>
          <div class="col-md-6">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Id</th>
                        <th>Hora Salida</th>
                    </tr>
                </thead>
                <tbody>
                  <% dbDesConexion.forEach(function (client, i){ %>
                    <tr>
                      <td><%= (i+1) %></td>
                      <td><%= client.id %></td>
                      <td><%= client.horaSalida %></td>
                    </tr>
              
                  <% } ) %> 

                </tbody>
            </table>
        </div>
      </div>
    </div>
      

<!-- footer -->

<div style="margin-top:0px;">
    <footer class="bg-dark fixed-bottom">
        <div class="container-fluid p-1 text-white text-center">
            <p><i class="fas fa-heart"></i>
                Con amor GpxCode &copy; 2021</p>
        </div>
    </footer>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>



</body>
</html>