<!-- muestra la tabla de usuarios registrados -->

<section id="registro" style="margin-bottom: 150px;">
    <div class="" style="padding: 80px;">
        <h2 class="bg-danger text-white p-3 text-center">Usuarios registrados al evento</h2>
    </div>
    
    
    <div class="container">
        <div class="row">
            <table class="table table-striped table-hover text-center">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Nombre</th>
                        
                        
                        
                    </tr>
                </thead>
                <tbody>
                    <% dbClient.forEach(function (client, i){ %>
                        
                            <tr>
                                <td><%= (i+1) %></td>
                                <td><%= client.name %></td>
                                
                            
                                <td>
                                    <a href="/delete/<%= client.id%>" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        
                    <% } ) %> 
                </tbody>
            </table>
            <div>
                 
            </div>
        </div>
    </div>
</section>


